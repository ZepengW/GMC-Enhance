{
  "manifest_version": 3,
  "name": "GMC-Enhance",
  "version": "0.2",
  "description": "全局媒体统一控制 · 可自定义快捷键 · 独立标签会话 (Unified Control · Shortcuts · Independent Tab Sessions)",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "GMC-Enhance",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon16.png",
    "128": "icons/icon16.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "overlay.css"
      ],
      "run_at": "document_idle"
    }
  ]
}