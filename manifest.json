{
  "manifest_version": 3,
  "name": "GMC-Enhance",
  "version": "0.1.0",
  "description": "全局媒体控制增强：快捷键快进/后退、倍速、截图，一切尽在当前标签页。",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "GMC-Enhance"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "overlay.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "toggle-play-pause": {
      "suggested_key": {
        "default": "Alt+Shift+K"
      },
      "description": "播放/暂停"
    },
    "seek-forward": {
      "suggested_key": {
        "default": "Alt+Shift+L"
      },
      "description": "快进（默认 +5s）"
    },
    "seek-back": {
      "suggested_key": {
        "default": "Alt+Shift+J"
      },
      "description": "快退（默认 -5s）"
    }
    // "speed-up": {
